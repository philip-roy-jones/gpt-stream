<!-- app/views/layouts/_sidebar.html.erb -->
<div data-controller="sidebar" class="w-64 bg-gray-50 border-r border-gray-200 h-screen flex flex-col transition-all duration-300 ease-in-out">
  <!-- Mobile toggle button -->
  <button data-action="sidebar#toggle" class="md:hidden fixed top-4 left-4 z-50 p-2 bg-white rounded-md shadow-sm border border-gray-200">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
    </svg>
  </button>

  <!-- Sidebar content -->
  <div data-sidebar-target="panel" class="flex flex-col h-full">
    <div class="p-4 border-b border-gray-200">
      <h1 class="text-xl font-semibold text-gray-800">Your Chats</h1>
    </div>

    <div class="flex-grow overflow-y-auto p-4">
      <!-- New chat button -->
      <%= button_to root_path, class: "w-full mb-4 flex items-center justify-center gap-2 bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded-md transition" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 3a1 1 0 00-1 1v5H4a1 1 0 100 2h5v5a1 1 0 102 0v-5h5a1 1 0 100-2h-5V4a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
        New Chat
      <% end %>

      <!-- Chat list -->
      <div class="space-y-2">
        <% current_user.chats.order(updated_at: :desc).each do |chat| %>
          <%= link_to chat_path(chat), class: "block p-2 rounded-md #{@chat&.id == chat.id ? 'bg-blue-100 border-l-4 border-blue-500' : 'hover:bg-gray-100'}" do %>
            <div class="truncate">
              <%= chat.title || "Chat ##{chat.id}" %>
            </div>
            <div class="text-xs text-gray-500">
              <%= chat.updated_at.strftime("%b %d, %Y") %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- User info and sign out -->
    <div class="p-4 border-t border-gray-200">
      <div class="mb-2 text-sm text-gray-600"><%= current_user.email %></div>
      <%= button_to destroy_user_session_path, method: :delete, class: "w-full flex items-center justify-center gap-2 bg-gray-200 hover:bg-gray-300 text-gray-700 py-2 px-4 rounded-md transition" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M3 3a1 1 0 00-1 1v12a1 1 0 001 1h12a1 1 0 001-1V4a1 1 0 00-1-1H3zm7 12.5a1 1 0 100-2 1 1 0 000 2zm-1-5.5a1 1 0 112 0v3a1 1 0 11-2 0v-3z" clip-rule="evenodd" />
        </svg>
        Sign Out
      <% end %>
    </div>
  </div>
</div>
