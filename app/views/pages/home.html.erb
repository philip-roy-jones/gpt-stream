<div class="w-full max-w-3xl mx-auto p-4">
  <div id="chat_container">
    <h3 class="text-xl font-semibold mb-6">New Conversation</h3>

    <div id="messages_list" class="space-y-4 mb-6">
      <!-- Messages will appear here -->
    </div>

    <div id="chat_form">
      <%= form_with model: Message.new, url: messages_path, class: "flex space-x-2" do |f| %>
        <%= f.text_area :content,
                        class: "flex-grow border rounded p-2",
                        placeholder: "Type your message to start a chat...",
                        required: true,
                        rows: 1 %>
        <%= f.submit "Send", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <% end %>
    </div>
  </div>
</div>
