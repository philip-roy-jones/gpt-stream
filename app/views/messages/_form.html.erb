<%= form_with model: [chat, Message.new], class: "flex space-x-2" do |f| %>
  <%= f.text_area :content,
                  class: "flex-grow border rounded p-2",
                  placeholder: "Type your message...",
                  required: true,
                  rows: 1 %>
  <%= f.submit "Send", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
<% end %>
