<%= turbo_stream_from chat %>

<div class="flex flex-col h-full w-full max-w-3xl mx-auto">
  <!-- Chat header -->
  <% if chat.title.present? %>
    <div class="py-4 border-b border-gray-200">
      <h3 class="text-xl font-semibold"><%= chat.title %></h3>
    </div>
  <% end %>

  <!-- Messages area - takes all available space -->
  <div id="messages_list" class="flex-grow overflow-y-auto space-y-4 p-4">
    <%= render chat.messages %>
  </div>

  <!-- Chat form fixed at the bottom -->
  <div id="chat_form" class="py-4 border-t border-gray-200 w-full">
    <%= render "messages/form", chat: chat %>
  </div>
</div>
